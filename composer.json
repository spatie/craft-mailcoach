{
    "name": "spatie/craft-mailcoach",
    "description": "A Mailcoach mail driver for Craft CMS",
    "keywords": [
        "spatie",
        "craft-mailcoach"
    ],
    "homepage": "https://github.com/spatie/craft-mailcoach",
    "license": "MIT",
    "authors": [
        {
            "name": "Freek Van der Herten",
            "email": "freek@spatie.be",
            "role": "Developer"
        }
    ],
    "require": {
        "php": "^8.4"
    },
    "require-dev": {
        "pestphp/pest": "^4.0",
        "laravel/pint": "^1.0",
        "spatie/ray": "^1.28"
    },
    "autoload": {
        "psr-4": {
            "Spatie\\CraftMailcoach\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Spatie\\CraftMailcoach\\Tests\\": "tests"
        }
    },
    "scripts": {
        "test": "vendor/bin/pest",
            "test-coverage": "vendor/bin/pest --coverage",
        "format": "vendor/bin/pint"
    },
    "config": {
        "sort-packages": true,
        "allow-plugins": {
            "pestphp/pest-plugin": true,
            "phpstan/extension-installer": true
        }
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}
